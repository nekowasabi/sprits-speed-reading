{
  "name": "spritz-speed-reader",
  "version": "1.0.1",
  "description": "Spritz-style speed reading browser extension for Firefox and Chrome",
  "scripts": {
    "sync-version": "node -e \"const fs=require('fs');const{version}=require('./package.json');['public/manifest.v2.json','public/manifest.v3.json'].forEach(f=>{const m=JSON.parse(fs.readFileSync(f));m.version=version;fs.writeFileSync(f,JSON.stringify(m,null,2)+'\\n')});console.log('Synced version:',version)\"",
    "build": "npm run sync-version && webpack --config webpack/webpack.prod.js",
    "build:chrome": "npm run sync-version && webpack --config webpack/webpack.prod.js",
    "build:firefox": "npm run sync-version && webpack --config webpack/webpack.firefox.js",
    "build:ext": "web-ext build --source-dir=dist-firefox --overwrite-dest",
    "build:ext:firefox": "web-ext build --source-dir=dist-firefox --overwrite-dest",
    "build:ext:chrome": "node -e \"const {version} = require('./package.json'); const {execSync} = require('child_process'); execSync('mkdir -p web-ext-artifacts && cd dist && zip -r ../web-ext-artifacts/chrome-v' + version + '.zip .', {stdio: 'inherit'});\"",
    "package:firefox": "npm run build:firefox && npm run build:ext:firefox",
    "package:chrome": "npm run build:chrome && npm run build:ext:chrome",
    "package:all": "npm run build:chrome && npm run build:firefox && npm run build:ext:firefox && npm run build:ext:chrome",
    "package:source": "zip -r web-ext-artifacts/source-code.zip . -x '*.git*' 'node_modules/*' 'dist/*' 'dist-firefox/*' 'web-ext-artifacts/*' 'coverage/*' 'tmp/*' '*.bak' '*.log'",
    "dev": "webpack --config webpack/webpack.dev.js --watch",
    "dev:chrome": "webpack --config webpack/webpack.dev.js --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "test:coverage": "jest --coverage --config jest.config.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.24",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.11.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.5",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.18",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "web-ext": "^9.1.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}

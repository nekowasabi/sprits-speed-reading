{
  "manifest_version": 2,
  "name": "Spritz Speed Reader",
  "version": "1.0.1",
  "description": "Spritz-style speed reading overlay for any webpage",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "spritz-speed-reader@example.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "commands": {
    "toggle-reader": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Toggle Spritz Speed Reader"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Spritz Speed Reader - クリックで設定を開く"
  }
}
